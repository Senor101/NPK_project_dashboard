<%- include('includes/head.ejs') %>
<%- include('includes/navbar.ejs') %>
  <% if(samples.length > 0) { %>
    <% samples.forEach((sample) => { %>
    <div class ="samples">
      <h2>Sample<%= sample.id %></h2>
      <ul>
        <li>LED_RED:<%= sample.LED_RED %></li>
        <li>LED_BLUE:<%= sample.LED_BLUE %></li>
        <li>LED_GREEN:<%= sample.LED_GREEN %></li>
      </ul>
      <button><a href="/sample/<%= sample.id %>">Details</a></button>
    </div>
    <% }) %>
  <% } else { %>
    <h1>No samples in Database</h1>
  <% } %>

</body>
</html>